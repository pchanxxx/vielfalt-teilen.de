<h2>
  Benutzer
</h2>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>ID</th>
      <th>E-Mail</th>
      <th width="150" class="actions"><%= link_to 'Neuer Benutzer', new_admin_user_path, class: ['btn', 'btn-small', 'btn-success', 'btn-block'] %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.email %></td>
      <td>
        <%= link_to 'Bearbeiten', edit_admin_user_path(u), class: ['btn', 'btn-small'] %>

        <% unless u == current_user %>
          <%= link_to 'LÃ¶schen', admin_user_path(u), method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: ['btn', 'btn-small', 'btn-danger'] %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>